<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:elevation="20dp"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_3" />

            <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewLight
                android:id="@+id/organizationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorDarkGrey"
                android:padding="@dimen/com_space"
                android:text="Organization Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorWhite" />

            <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewLight
                android:id="@+id/date_stext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity"
                android:padding="@dimen/com_space"
                android:text="Reg. Date"
                android:textColor="@color/textTitleColor" />

            <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewLight
                android:id="@+id/register_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity"
                android:layout_toRightOf="@+id/date_stext"
                android:padding="@dimen/com_space"
                android:text="12-03-2010" />


            <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewLight
                android:id="@+id/status"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/activity"
                android:padding="@dimen/com_space"
                android:text="Autorised"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />


            <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewLight
                android:id="@+id/activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:paddingLeft="@dimen/com_space"
                android:paddingRight="@dimen/com_space"
                android:paddingTop="@dimen/com_space"
                android:text="Land Area"
                android:textColor="@color/textTitleColor" />

            <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewLight
                android:id="@+id/land_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_toRightOf="@+id/activity"
                android:paddingLeft="@dimen/com_space"
                android:paddingRight="@dimen/com_space"
                android:paddingTop="@dimen/com_space"
                android:text="jaipur" />


            <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_toLeftOf="@+id/capacity_of_plants"
                android:paddingLeft="@dimen/com_space"
                android:paddingRight="@dimen/com_space"
                android:paddingTop="@dimen/com_space"
                android:text="Capacity"
                android:textColor="@color/textTitleColor" />

            <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewLight
                android:id="@+id/capacity_of_plants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/image"
                android:paddingLeft="@dimen/com_space"
                android:paddingRight="@dimen/com_space"
                android:paddingTop="@dimen/com_space"
                android:text="5" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:orientation="horizontal"
            android:weightSum="2">

            <greenbharat.cdac.com.greenbharat.fancybuttons.FancyButton
                android:id="@+id/button_view_land"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/com_space"
                fancy:fb_defaultColor="@color/colorAccent"
                fancy:fb_focusColor="@color/colorPrimary"
                fancy:fb_fontIconResource="@string/icon_view"
                fancy:fb_text="View Land"
                fancy:fb_textColor="@color/colorWhite" />

            <greenbharat.cdac.com.greenbharat.fancybuttons.FancyButton
                android:id="@+id/button_alloted_trees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/com_space"
                fancy:fb_defaultColor="@color/colorPrimary"
                fancy:fb_focusColor="@color/colorAccent"
                fancy:fb_fontIconResource="@string/icon_tree"
                fancy:fb_text="Allotted Trees"
                fancy:fb_textColor="@color/colorWhite" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>