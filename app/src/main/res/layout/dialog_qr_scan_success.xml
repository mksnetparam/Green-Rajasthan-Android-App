<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <greenbharat.cdac.com.greenbharat.fancybuttons.FancyButton
        android:id="@+id/btn_close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_alignParentRight="true"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#0e000000"
        fancy:fb_focusColor="@color/colorPrimary"
        fancy:fb_fontIconResource="@string/icon_close"
        fancy:fb_iconPosition="left"
        fancy:fb_textSize="20sp"
        fancy:fb_textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/dialog_upload_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewFontAwesome
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/activity_vertical_margin"
            android:text="@string/icon_check"
            android:textColor="@color/colorWhite"
            android:textSize="100sp" />

        <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewLight
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="QR Code Matched!\n\nCongratulations! \n You have planted a tree successfully."
            android:textColor="@color/colorWhite" />


        <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewFontAwesome
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/activity_vertical_margin"
            android:text="@string/icon_thumb_up"
            android:textColor="@color/colorWhite"
            android:textSize="30sp" />


    </LinearLayout>

    <greenbharat.cdac.com.greenbharat.fancybuttons.FancyButton
        android:id="@+id/button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/activity_vertical_margin"
        fancy:fb_defaultColor="@color/colorPrimary"
        fancy:fb_focusColor="@color/colorAccent"
        fancy:fb_fontIconResource="@string/icon_upload"
        fancy:fb_text="Upload Plant Progress"
        fancy:fb_textColor="@color/colorWhite" />
</RelativeLayout>