<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10">

            <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewRegular
                style="@style/TitleTextView"
                android:id="@+id/text_view_key"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Batch"
                android:textSize="15sp" />


            <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewLight
                android:layout_width="0dp"
                android:id="@+id/text_view_value"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@color/colorGrey"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Core Java "
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD" />
    </LinearLayout>
