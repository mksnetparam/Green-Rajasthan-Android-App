<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="5dp"
    android:elevation="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <CheckBox
            android:id="@+id/checkbox_suggest_plant"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/checkbox_suggest_plant"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView"
                android:layout_margin="@dimen/activity_spacing"
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:scaleType="fitXY"
                android:layout_height="90dp"
                android:src="@drawable/plant"/>


            <TableLayout
                android:paddingLeft="@dimen/activity_spacing"
                android:paddingTop="@dimen/activity_spacing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:shrinkColumns="*"
                android:stretchColumns="*" >

                <TableRow

                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">

                    <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewLight
                        android:id="@+id/text_plant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track plant growth"
                        android:layout_span="2"
                        android:textSize="20dp"
                        android:paddingBottom="@dimen/activity_spacing"/>

                </TableRow>


                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="From:" />

                    <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewLight
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05-05-2016"
                        />


                </TableRow>


                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewLight
                        android:text="Plant Type:"
                        />

                    <greenbharat.cdac.com.greenbharat.customfonts.MyTextViewLight

                        android:id="@+id/text_plant_type"
                        android:text="Monthly"
                        android:paddingLeft="@dimen/component_space"/>


                </TableRow>




            </TableLayout>


        </LinearLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>